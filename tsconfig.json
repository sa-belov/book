{
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": "./src"
  },
  "include": [
    "src"
  ],
  "paths": {
    "components/*": ["components/*"],
    "constants/*": ["constants/*"],
    "helpers/*": ["helpers/*"],
    "pages/*": ["pages/*"],
    "slices/*": ["slices/*"],
    "selectors/*": ["selectors/*"],
    "router/*": ["router/*"],
    "services/*": ["services/*"],
    "shared/*": ["shared/*"],
    "styles/*": ["styles/*"],
    "types/*": ["types/*"],
    "settings/*": ["settings/*"],
    "assets/*": ["assets/*"]
  }
}
